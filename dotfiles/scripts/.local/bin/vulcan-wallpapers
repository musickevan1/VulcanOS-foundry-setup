#!/bin/bash
# vulcan-wallpapers - Wallpaper profile manager for Hyprland
# Manages per-monitor wallpaper profiles with automatic hyprpaper configuration
#
# Usage:
#   vulcan-wallpapers apply <profile-name>    Apply wallpaper profile
#   vulcan-wallpapers reload                Reload current wallpapers
#   vulcan-wallpapers rotate                Cycle through profiles
#   vulcan-wallpapers set <monitor> <path>  Set wallpaper for specific monitor
#   vulcan-wallpapers save <profile-name>   Save current as profile
#   vulcan-wallpapers list                  List all profiles
#   vulcan-wallpapers init                  Initialize from current hyprpaper.conf

set -euo pipefail

# Configuration
WALLPAPER_DIR="$HOME/.config/hypr/wallpapers"
PROFILES_FILE="$WALLPAPER_DIR/profiles.toml"
HYPRPAPER_CONF="$HOME/.config/hypr/hyprpaper.conf"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions
info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

warn() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

error() {
    echo -e "${RED}[ERROR]${NC} $1"
    exit 1
}

# Create directories
init_dirs() {
    mkdir -p "$WALLPAPER_DIR"
    mkdir -p "$HOME/Pictures/Wallpapers"

    # Create profiles file if it doesn't exist
    if [[ ! -f "$PROFILES_FILE" ]]; then
        cat > "$PROFILES_FILE" << 'EOF'
# Wallpaper Profiles for Hyprland
# Format: [profile.name] and monitor=path

[profile.default]
description = "Default single wallpaper"
# Empty path applies default wallpaper to all monitors
EOF
        info "Created profiles file: $PROFILES_FILE"
    fi
}

# Get current monitor names
get_monitors() {
    hyprctl monitors -j 2>/dev/null | jq -r '.[].name' | sort
}

# Validate monitor exists
validate_monitor() {
    local monitor=$1
    local monitors=$(get_monitors)

    if ! echo "$monitors" | grep -q "^$monitor$"; then
        error "Monitor '$monitor' not found. Available monitors:$(echo "$monitors" | sed 's/^/  - /')"
    fi
}

# Expand tilde to home directory
expand_path() {
    local path=$1
    echo "${path/#\~/$HOME}"
}

# Apply wallpaper profile
apply_profile() {
    local profile_name=$1

    if [[ -z "$profile_name" ]]; then
        error "Profile name required. Usage: vulcan-wallpapers apply <profile-name>"
    fi

    # Check if profile exists
    if ! grep -q "^\[profile\.$profile_name\]" "$PROFILES_FILE"; then
        error "Profile '$profile_name' not found. Use 'list' to see available profiles."
    fi

    info "Applying wallpaper profile: $profile_name"

    # Extract profile settings
    local profile_section=$(sed -n "/^\[profile\.$profile_name\]/,/^\[profile\./p" "$PROFILES_FILE" | head -n -1)

    # Build preload and wallpaper lines
    local preload_lines=""
    local wallpaper_lines=""

    while IFS='=' read -r key value; do
        # Skip comments and empty lines
        [[ $key =~ ^[[:space:]]*# ]] && continue
        [[ -z $key ]] && continue

        # Remove quotes and whitespace
        key=$(echo "$key" | sed 's/[[:space:]]//g')
        value=$(echo "$value" | sed 's/^[[:space:]]*//;s/[[:space:]]*$//' | tr -d '"')

        # Expand tilde
        value=$(expand_path "$value")

        # Skip non-monitor keys
        [[ $key == "description" ]] && continue

        # Validate monitor exists
        validate_monitor "$key"

        # Check if wallpaper file exists
        if [[ ! -f "$value" ]]; then
            warn "Wallpaper not found: $value (for monitor $key)"
        else
            # Add to preload
            preload_lines="$preload_lines    preload = $value"$'\n'

            # Add to wallpaper
            wallpaper_lines="$wallpaper_lines    wallpaper = $key,$value"$'\n'
        fi
    done <<< "$profile_section"

    # If no monitors defined, use default wallpaper
    if [[ -z "$wallpaper_lines" ]]; then
        info "No monitor-specific wallpapers in profile, using default"
        local default_wall="$HOME/Pictures/Wallpapers/wallpaper.png"
        if [[ -f "$default_wall" ]]; then
            preload_lines="    preload = $default_wall"$'\n'
            wallpaper_lines="    wallpaper = ,$default_wall"$'\n'
        else
            warn "Default wallpaper not found: $default_wall"
        fi
    fi

    # Generate hyprpaper.conf
    cat > "$HYPRPAPER_CONF" << EOF
# Hyprpaper Configuration
# Generated by vulcan-wallpapers for profile: $profile_name
# $(date)

# Preload wallpaper images
${preload_lines}
# Set wallpapers
${wallpaper_lines}
# Disable splash
splash = false
EOF

    # Reload hyprpaper
    reload_hyprpaper

    success "Profile '$profile_name' applied"
    info "Wallpapers reloaded"
}

# Reload hyprpaper
reload_hyprpaper() {
    # Check if hyprpaper is running
    if pgrep -x hyprpaper > /dev/null; then
        # Unload all wallpapers first
        for monitor in $(get_monitors); do
            hyprctl hyprpaper wallpaper "$monitor," 2>/dev/null || true
        done

        # Give it a moment
        sleep 0.2

        # Preload and apply new wallpapers
        grep "^    preload =" "$HYPRPAPER_CONF" | while read -r line; do
            local path=$(echo "$line" | cut -d'=' -f2 | tr -d ' ')
            hyprctl hyprpaper preload "$path" 2>/dev/null || true
        done

        grep "^    wallpaper =" "$HYPRPAPER_CONF" | while read -r line; do
            local setting=$(echo "$line" | cut -d'=' -f2 | tr -d ' ')
            hyprctl hyprpaper wallpaper "$setting" 2>/dev/null || true
        done
    else
        # Start hyprpaper
        hyprpaper &
        sleep 0.5
    fi
}

# Reload current wallpapers
reload_current() {
    info "Reloading current wallpapers..."

    # Check if hyprpaper is running
    if ! pgrep -x hyprpaper > /dev/null; then
        warn "hyprpaper is not running, starting it..."
        hyprpaper &
        sleep 0.5
    fi

    # Reload from existing config
    reload_hyprpaper

    success "Wallpapers reloaded"
}

# Rotate through profiles
rotate_profiles() {
    local profiles=$(list_profiles_names)

    if [[ -z "$profiles" ]]; then
        error "No profiles found. Create one first with 'save' command."
    fi

    # Convert to array
    IFS=$'\n' read -ra PROFILE_ARRAY <<< "$profiles"

    # Find current profile (if saved)
    local current_file="$WALLPAPER_DIR/current-profile.txt"
    local current=""
    if [[ -f "$current_file" ]]; then
        current=$(cat "$current_file")
    fi

    # Find next profile
    local next=""
    if [[ -z "$current" ]]; then
        next="${PROFILE_ARRAY[0]}"
    else
        for i in "${!PROFILE_ARRAY[@]}"; do
            if [[ "${PROFILE_ARRAY[$i]}" == "$current" ]]; then
                local next_index=$(( (i + 1) % ${#PROFILE_ARRAY[@]} ))
                next="${PROFILE_ARRAY[$next_index]}"
                break
            fi
        done
        # If current not found, use first
        [[ -z "$next" ]] && next="${PROFILE_ARRAY[0]}"
    fi

    # Apply next profile
    apply_profile "$next"

    # Save as current
    echo "$next" > "$current_file"
    info "Rotated to profile: $next"
}

# Set wallpaper for specific monitor
set_monitor_wallpaper() {
    local monitor=$1
    local wallpaper_path=$2

    if [[ -z "$monitor" ]] || [[ -z "$wallpaper_path" ]]; then
        error "Monitor and wallpaper path required. Usage: vulcan-wallpapers set <monitor> <path>"
    fi

    # Validate monitor
    validate_monitor "$monitor"

    # Expand path
    wallpaper_path=$(expand_path "$wallpaper_path")

    # Check if file exists
    if [[ ! -f "$wallpaper_path" ]]; then
        error "Wallpaper file not found: $wallpaper_path"
    fi

    info "Setting wallpaper for monitor $monitor: $wallpaper_path"

    # Update hyprpaper.conf
    # Remove existing wallpaper line for this monitor
    sed -i "/^    wallpaper = $monitor,/d" "$HYPRPAPER_CONF"

    # Add preload if not already there
    if ! grep -q "^    preload = $wallpaper_path" "$HYPRPAPER_CONF"; then
        # Add preload after splash line
        sed -i "/^splash = false/a\\    preload = $wallpaper_path" "$HYPRPAPER_CONF"
    fi

    # Add wallpaper line after preload lines
    sed -i "/^    wallpaper =/a\\    wallpaper = $monitor,$wallpaper_path" "$HYPRPAPER_CONF"

    # Reload hyprpaper
    reload_hyprpaper

    success "Wallpaper set for $monitor"
}

# Save current wallpaper setup as profile
save_profile() {
    local profile_name=$1

    if [[ -z "$profile_name" ]]; then
        error "Profile name required. Usage: vulcan-wallpapers save <profile-name>"
    fi

    # Check if profile already exists
    if grep -q "^\[profile\.$profile_name\]" "$PROFILES_FILE"; then
        warn "Profile '$profile_name' already exists. Overwriting..."
        # Remove existing profile
        sed -i "/^\[profile\.$profile_name\]/,/^\[profile\./{ /^\[profile\.$profile_name\]/d; /^\[profile\./!d }" "$PROFILES_FILE"
    fi

    info "Saving current wallpaper setup as profile: $profile_name"

    # Read current wallpapers from hyprctl
    local current_setup=""
    for monitor in $(get_monitors); do
        local monitor_info=$(hyprctl monitors -j 2>/dev/null | jq -r ".[] | select(.name==\"$monitor\")")
        if [[ -n "$monitor_info" ]]; then
            # Get current wallpaper path from hyprpaper config
            local current_wallpaper=$(grep "^    wallpaper = $monitor," "$HYPRPAPER_CONF" | cut -d',' -f2 | tr -d ' ')
            if [[ -n "$current_wallpaper" ]]; then
                current_setup="${current_setup}${monitor} = \"$current_wallpaper\""$'\n'
            fi
        fi
    done

    # Add profile to profiles file
    if [[ -n "$current_setup" ]]; then
        cat >> "$PROFILES_FILE" << EOF

[profile.$profile_name]
description = "Saved on $(date '+%Y-%m-%d %H:%M')"
$current_setup
EOF
        success "Profile '$profile_name' saved"
    else
        error "No active wallpapers to save. Make sure hyprpaper is running."
    fi
}

# List all profiles
list_profiles() {
    info "Available wallpaper profiles:"

    if [[ ! -f "$PROFILES_FILE" ]]; then
        error "No profiles file found. Initialize with 'init' command."
    fi

    # Extract profile names and descriptions
    local profiles=$(list_profiles_names)

    if [[ -z "$profiles" ]]; then
        warn "No profiles found. Create one with 'save' command."
        return
    fi

    IFS=$'\n' read -ra PROFILE_ARRAY <<< "$profiles"

    for profile in "${PROFILE_ARRAY[@]}"; do
        # Extract description
        local desc=$(sed -n "/^\[profile\.$profile\]/,/^\[profile\./p" "$PROFILES_FILE" | \
                  grep "^description" | cut -d'=' -f2 | tr -d '"')

        echo -e "  ${GREEN}•${NC} $profile"
        if [[ -n "$desc" ]]; then
            echo -e "    ${BLUE}→${NC} $desc"
        fi
    done
}

# Get just profile names
list_profiles_names() {
    grep "^\[profile\." "$PROFILES_FILE" 2>/dev/null | \
        sed 's/\[profile\.//;s/\]$//' | sort
}

# Initialize from current hyprpaper.conf
init_from_config() {
    info "Initializing wallpaper profiles from current hyprpaper.conf..."

    if [[ ! -f "$HYPRPAPER_CONF" ]]; then
        error "hyprpaper.conf not found: $HYPRPAPER_CONF"
    fi

    # Create default profile
    cat > "$PROFILES_FILE" << 'EOF'
# Wallpaper Profiles for Hyprland
# Generated by vulcan-wallpapers init

[profile.default]
description = "Default wallpaper configuration"
EOF

    # Extract wallpapers from current config
    grep "^    wallpaper = " "$HYPRPAPER_CONF" | while read -r line; do
        local setting=$(echo "$line" | cut -d'=' -f2 | tr -d ' ')
        local monitor=$(echo "$setting" | cut -d',' -f1)
        local path=$(echo "$setting" | cut -d',' -f2)

        if [[ -n "$path" ]]; then
            echo "$monitor = \"$path\"" >> "$PROFILES_FILE"
        fi
    done

    success "Wallpaper profiles initialized"
    info "Edit $PROFILES_FILE to add more profiles"
}

# Show help
show_help() {
    cat << EOF
${GREEN}vulcan-wallpapers${NC} - Wallpaper profile manager for Hyprland

${YELLOW}Usage:${NC}
  vulcan-wallpapers apply <profile-name>    Apply wallpaper profile
  vulcan-wallpapers reload                Reload current wallpapers
  vulcan-wallpapers rotate                Cycle through profiles
  vulcan-wallpapers set <monitor> <path>  Set wallpaper for specific monitor
  vulcan-wallpapers save <profile-name>   Save current as profile
  vulcan-wallpapers list                  List all profiles
  vulcan-wallpapers init                  Initialize from current hyprpaper.conf
  vulcan-wallpapers help                  Show this help

${YELLOW}Examples:${NC}
  vulcan-wallpapers apply 3-monitor
  vulcan-wallpapers set eDP-1 ~/Pictures/Wallpapers/laptop.png
  vulcan-wallpapers save my-setup
  vulcan-wallpapers list

${YELLOW}Configuration:${NC}
  Profiles file:   $PROFILES_FILE
  Hyprpaper config: $HYPRPAPER_CONF
  Wallpaper dir:   $HOME/Pictures/Wallpapers

${YELLOW}Keybindings:${NC}
  Super + Shift + W    Rotate wallpaper profiles
  Super + Alt + W      Reload wallpapers
  Super + M            Open HyprMon (monitor profiles)
  Super + Alt + M      Open nwg-displays (GUI)
EOF
}

# Main
main() {
    # Initialize directories
    init_dirs

    local command=${1:-help}

    case "$command" in
        apply)
            apply_profile "$2"
            ;;
        reload)
            reload_current
            ;;
        rotate)
            rotate_profiles
            ;;
        set)
            set_monitor_wallpaper "$2" "$3"
            ;;
        save)
            save_profile "$2"
            ;;
        list)
            list_profiles
            ;;
        init)
            init_from_config
            ;;
        help|--help|-h)
            show_help
            ;;
        *)
            error "Unknown command: $command${NC}$(show_help)"
            ;;
    esac
}

main "$@"
